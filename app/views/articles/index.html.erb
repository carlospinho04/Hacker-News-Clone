<% @articles.each do |article| %>
  <table border='0' cellpadding='0' cellspacing='0'>
    <tbody>
      <tr>
        <%if !current_user.nil?%>
          <td><%= link_to image_tag("up.png", :class => "vote"), edit_article_path(article, check: 1) %></td>
          <td ><%= link_to image_tag("down.png", :class => "vote"), edit_article_path(article, check: 2) %></td>
        <%else%>
          <td><%= link_to image_tag("up.png", :class => "vote"), '/login' %></td>
          <td><%= link_to image_tag("down.png", :class => "vote"), '/login' %></td>
        <%end%> 
        <td class="title-table"><%= link_to article.title, article_path(article), {:class => 'title-table'} %></td>
        <td>
          <%if !current_user.nil? && article.author == current_user.name%>
            <td></td>
            <td><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?'  }%></td>
          <%end%>
        </td>  
      </tr>
      <tr>
        <td class="text-table"><%= article.up_votes%></td>
        <td class="text-table"><%= article.down_votes%></td>
        <td class="data-table"><%= "Author: #{article.author}, comments: #{article.comments.count}" %></td>
      </tr>
      <tr style="height:5px"></tr>
    </tbody>
  </table>

<% end %>
<%if !current_user.nil?%>
  <div align="center">
    <%= link_to 'New article', new_article_path %>
  </div>
<%end%>
