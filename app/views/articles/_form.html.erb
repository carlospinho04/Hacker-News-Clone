<%= form_for @article do |f| %>
  <% if @article.errors.any? %>
    <div align="center" id='error_explanation'>
      <h2>
        <%= pluralize(@article.errors.count, 'error') %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <p><%= msg %></p>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table id='helv' align='center'>
    <tr>
      <td><%= f.hidden_field :author, value:current_user.name %></td>
      <td><%= f.hidden_field :up_votes, value:0 %></td>
      <td><%= f.hidden_field :down_votes, value:0 %></td>
    </tr>
  </table>
  <p class='c' id='helv'>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p class='c' id='helv'>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p class='c' id='helv'>
    <%= f.submit %>
  </p>

<% end %>
