<%= form_for @article do |f| %>

  <% if @article.errors.any? %>
    <div id='error_explanation'>
      <h2>
        <%= pluralize(@article.errors.count, 'error') %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <table id='helv' align='center'>
    <tr>
      <th><%= f.label :author %></th>
      <th><%= f.label :up_votes %></th>
      <th><%= f.label :down_votes %></th>
    </tr>
    <tr>
      <td><%= f.text_field :author, :readonly => true, value:current_user.name %></td>
      <td><%= f.text_field :up_votes, :readonly => true, value:0 %></td>
      <td><%= f.text_field :down_votes, :readonly => true, value:0 %></td>
    </tr>
  </table>
  <p class='c' id='helv'>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p class='c' id='helv'>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <p class='c' id='helv'>
    <%= f.submit %>
  </p>

<% end %>
